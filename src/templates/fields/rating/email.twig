{# Only render if includeInEmail is true #}
{% if field.includeInEmail %}
	{% set options = field.getRatingOptions() %}
	{% set selectedLabel = '' %}
	{% for option in options %}
		{% if option.value == value %}
			{% set selectedLabel = option.label %}
		{% endif %}
	{% endfor %}

	{# <strong>{{ field.label }}:</strong> #}
	{% if value is not null %}
		{% if field.ratingType == 'star' %}
			{{ value }}
			/
			{{ field.maxValue }}
			stars
		{% elseif field.ratingType == 'emoji' %}
			{% if selectedLabel and selectedLabel != value|string %}
				{{ selectedLabel }} ({{ value }})
			{% else %}
				{{ value }}
			{% endif %}
		{% elseif field.ratingType == 'nps' %}
			{{ value }}
			/
			{{ field.maxValue }}
		{% endif %}
	{% else %}
		<em>Not rated</em>
	{% endif %}
{% endif %}
